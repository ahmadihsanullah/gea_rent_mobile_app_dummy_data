<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/seed"
    tools:context=".ui.ProfileFragment">

    <TextView
        android:id="@+id/txt_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:fontFamily="@font/poppinsbold"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:src="@drawable/fotoprofil"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/nama_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Irma"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        >
        <ImageView
            android:id="@+id/bg_putih"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_profile"
            />

        <ImageButton
            android:id="@+id/detail_profile"
            android:layout_width="320dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_profil"/>

        <ImageButton
            android:id="@+id/bukatoko"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/detail_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_bukatoko"/>

        <ImageButton
            android:id="@+id/tokosaya"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/bukatoko"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_bukatoko"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/pengaturan"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tokosaya"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_pengaturan"/>

        <ImageButton
            android:id="@+id/kontak"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/pengaturan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_contact"/>

        <ImageButton
            android:id="@+id/keluar"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/kontak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_keluar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Add other ImageButtons here with appropriate margins -->

</LinearLayout>
