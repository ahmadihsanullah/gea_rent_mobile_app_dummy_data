<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/seed"
        tools:context=".ui.ProfileFragment">
    
    <TextView
            android:id="@+id/txt_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/poppinsbold"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fotoprofil"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/txt_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/nama_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Irma"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bg_putih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_profile"
        app:layout_constraintTop_toBottomOf="@id/nama_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/detail_profile"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_profil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nama_profile" />

    <ImageButton
            android:id="@+id/bukatoko"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_bukatoko"
            app:layout_constraintTop_toTopOf="@id/detail_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/tokosaya"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_tokosaya"
            app:layout_constraintTop_toTopOf="@id/bukatoko"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/pengaturan"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_pengaturan"
            app:layout_constraintTop_toTopOf="@id/tokosaya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/kontak"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_contact"
            app:layout_constraintTop_toTopOf="@id/pengaturan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/keluar"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_keluar"
            app:layout_constraintTop_toTopOf="@id/kontak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
